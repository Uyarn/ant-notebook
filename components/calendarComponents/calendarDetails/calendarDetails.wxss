/* components/calendarComponents/calendatDetails/calendarDetails.wxss */

.cal-detail{
  position: fixed;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: rgb(248, 240, 128);
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.cal-title{
  font-weight: bold;
  margin-top: 10rpx;
}
.cal-modify{  
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  top:10rpx;
  right:10rpx;
}
.cal-detail .cal-modify image{
  width:100%;
  height: 100%;
}
.cal-detail picker{
  height: 50rpx;
  text-decoration: underline;
  
}
.cal-detail textarea{
  width:100%;
  text-align: left;
  padding:15rpx;
}
.cal-detail .cal-detail-img{
  display: flex;
  justify-content: start;
}
.cal-detail .cal-detail-img image{
  width:100rpx;
  height: 100rpx;
  z-index: 50;
  margin:0 0 10rpx 10rpx;
}
.cal-detail-btn{
  display: flex;
  flex-direction: row;
}
.cal-detail-btn button{
  width:50%;
  background-color: rgb(248, 240, 128);
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  border:0;
}