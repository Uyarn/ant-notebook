/* components/calendarItem/calendarItem.wxss */
.calendar-item{
  margin: 20rpx 0;
  height: 100rpx;
   width:100%; 
   border-radius: 4rpx;
   background: #ffebc3;
   display: flex;
   flex-direction: row;
   justify-content: center;
}

.calendar-item-content, .calendar-item-time{
  flex: 0 1 70%;
  height:100%;
  line-height: 100rpx;
  text-align: center;
  color:#000;
  overflow: hidden;
}
.calendar-item-time{
  flex: 0 1 20%;
}
.calendar-item-look{
  flex: 0 1 10%;
  height:80rpx;
  margin:10rpx 0;
  padding: 0;
  background:transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  }
.calendar-item-look image{
  
  height: 60rpx;
  width:60rpx;
}
