/* components/addDialog/addDialog.wxss */
.dialog{
  height: 100%;
}
.dialog-title{
  background: rgb(235, 110, 128);
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}
.dialog-radio-group{
  padding:20rpx 0rpx;
  font-weight: bold;
}
.dialog-background{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  top:0;
  left:0;
  z-index: 1000;
  overflow: hidden;
}
.dialog-textarea{
  background: rgba(235,110,128,0.5);
  
  border: #fff 1rpx solid;
  border-radius: 8rpx;
  width:100%;
  box-sizing: border-box;
  background-clip: content-box;
}
.dialog-box{
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.dialog-btn{
  display: flex;
  flex-direction: row;
}
.dialog-btn button{
  width: 50%;
}