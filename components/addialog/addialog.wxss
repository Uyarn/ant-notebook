/* components/addDialog/addDialog.wxss */
.dialog{
  height: 100%;
}
.dialog-background{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  top:0;
  left:0;
  z-index: 1000;
  overflow: hidden;
}

.dialog-box{
   position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}