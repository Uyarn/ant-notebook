/* components/todoItem/todoItem.wxss */
.todo-item{
  border:#fff 1prx solid;
  border-radius: 4rpx;
  display: flex;
  flex-direction: row;
  width:90%;
  height: 140rpx;
  background:rgba(235,110,128,0.5);
  margin:5rpx auto;
}
.todo-item-radio{
  flex:0 1 10%;
  line-height: 140rpx;
}
.todo-item-content{
   flex:0 1 80%;
   word-break: break-all;
   color:#000;
   font-weight: normal;
   line-height: 140rpx;
}
.todo-item-manipulate{
  flex: 0 1 10%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.todo-item-manipulate image,.todo-item-manipulate button{
  width:100%;
  height:100%;
  padding: 0;
  background: rgba(255,255,255,0)
}
.todo-item-done{
  text-decoration: line-through;
}
.todo-item-manipulate button{
  height: 50%;
}