/* pages/todoList/todoList.wxss */
.todo{
  height: 100%;
  position: relative;
}
.todo-lists{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}
.todo-remind{
  font-size: 30rpx;
  text-align: center;
  color: rgba(0,0,0,0.4);
}
.todo-date{
   padding-top: 15rpx;
   font-size: 40rpx;
   font-weight: bold;
   color:#008f95;
   text-align: center;
}
.todo-add{
   position: absolute;
   height: 100rpx;
   width:100rpx;
   right:15rpx;
   bottom: 15rpx;
}
.todo-add image{
  width:100%;
  height: 100%;
}