<!--pages/calendar/calendar.wxml-->
<view class="cal">
        <calendar        
        cell-size="30"  
        calendar-style="cal-calendar" 
        days-color="{{days_style}}"
        header-style="cal-header" 
        board-style="cal-board" 
        bindnextMonth="next"
        binddayClick="dayClick"
        />
    <view class='cal-add' bindtap='addTodo'>
<image src="{{addSrc}}"></image>
</view>
    </view>