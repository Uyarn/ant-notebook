/* pages/calendar/calendar.wxss */
.cal {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
}

.cal-calendar {
    background-color:rgba(235,110,128,0.4) ;
    padding-top: 10px;
    border-radius: 15px;
}

.cal-header {
    font-size: large;
    color: #000;    
}

.cal-board {
    color: #000;
    font-weight: bold;
}

.cal-add{
   height: 100rpx;
   margin-top: 20rpx;
   width:100%; 
   line-height: 100rpx;
   font-size: 20rpx;
   background-color:rgba(235,110,128,0.2) ;
   border-radius: 4px;
   border:2px dotted #eb6e80;
   text-align: center;
   color:#eb6e80;
}
